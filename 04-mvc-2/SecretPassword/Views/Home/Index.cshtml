@model Password;

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 mb-3">What's the secret password?</h1>
    <div class="card shadow">
        <div class="card-body">
            <form asp-action="ProcessPassword" asp-controller="Home" method="post">
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <input asp-for="Content" class="form-control">
                    <span class="form-text text-warning" asp-validation-for="Content"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
